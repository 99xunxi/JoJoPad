<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="layout_input_amount_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="btn_input_amount_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="tv_discount_item_style">
        <item name="android:layout_width">@dimen/dp_120</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/discount_color_press_select</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/discount_press_select</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
    </style>
    <style name="ll_discount_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
    </style>


    <declare-styleable name="NumberAddSubView">
        <attr name="value" format="integer|reference"/>
        <attr name="minValue" format="integer|reference"/>
        <attr name="maxValue" format="integer|reference"/>
        <attr name="btnAddBackground" format="reference"/>
        <attr name="btnSubBackground" format="reference"/>
        <attr name="textViewBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="hint" format="string"/>
        <attr name="gravity" format="integer"/>
    </declare-styleable>
    <declare-styleable name="TransferItem">
        <attr name="num" format="string"/>
        <attr name="title" format="string"/>
        <attr name="margin" format="integer"/>
        <attr name="line_button" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PadHeader">
        <attr name="backcontent" format="string"/>
        <attr name="showdate" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1" />
        </attr>
        <attr name="background" format="reference"/>
    </declare-styleable>
    <declare-styleable name="EditTextItem">
        <attr name="edittitle" format="string"/>
        <attr name="morecontent" format="string"/>
        <attr name="checkcontent" format="string"/>
        <attr name="showcheck" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1" />
        </attr>
        <attr name="showmore" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
